<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/registration_nav_graph"
    app:startDestination="@id/login">

    <fragment
        android:id="@+id/login"
        android:name="com.info.firebaseauth.authentication.Login"
        android:label="Login"
        tools:layout="@layout/login">
        <action
            android:id="@+id/action_login_to_registration"
            app:destination="@id/registration"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/registration"
        android:name="com.info.firebaseauth.authentication.Registration"
        android:label="Registration"
        tools:layout="@layout/registration">
        <action
            android:id="@+id/action_registration_to_login"
            app:destination="@id/login"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>